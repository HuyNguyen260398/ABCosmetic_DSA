@model IEnumerable<Product_WebApp.Models.Staff>

@{
    /**/

    ViewBag.Title = "StaffList";
}

<h2>Staff List</h2>

@using (Html.BeginForm("StaffList", "ViewOrder", FormMethod.Get))
{
    <table class="table">
        <tr>
            <td>
                <label>Staff name: </label><input type="text" name="name" id="name" class="form-control" />
            </td>
            <td>
                <input type="submit" value="Search" class="btn btn-info btn-sm" />
            </td>
            <td>
                <a href="@Url.Action("StaffList", "ViewOrder")" class="btn btn-info btn-sm">Refresh</a>
            </td>
        </tr>
    </table>
}

@if (Model.Count() == 0)
{
    <h2>No staff found!</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Store_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a href="@Url.Action("StaffOrder", "ViewOrder", new { name = item.Fullname })" class="btn btn-info btn-sm">View Report</a>
                </td>
            </tr>
        }

    </table>
}

